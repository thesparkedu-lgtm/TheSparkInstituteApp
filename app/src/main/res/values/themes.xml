<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheSparkInstituteApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/Secondary</item>
        <item name="background">@color/white</item>
        <item name="cardBackgroundColor">@color/backgroung_wite</item>
        <item name="appBarLayoutStyle">@style/MyAppBarStyle</item>
        <item name="appBarLayoutStyle">@style/Theme.MyApp</item>
        <item name="indicatorColor">@color/active_indicator_color</item>
        <item name="bottomNavigationStyle">@color/bottom_nav_item_color_trancprent</item>




    </style>

    <style name="MyAppBarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/appbar_color</item>
        <item name="titleTextColor">@color/appbar_text_color</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/bottom_nav_color</item>
