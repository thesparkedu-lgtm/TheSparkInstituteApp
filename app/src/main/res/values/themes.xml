        <item name="bottomNavigationStyle">@style/MyBottomNavStyle</item>
    </style>

    <style name="MyBottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="ActiveIndicatorShape">
        <item name="cornerFamily">rounded</item>
