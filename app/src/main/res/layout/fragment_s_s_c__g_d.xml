<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/translation_buttons"
        layout="@layout/fragment_my_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FFF8F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFF8F0"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSC GD                "
                android:textSize="28sp"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"/>

            <!-- Target Illustration -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Target illustration"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <!-- About JNV -->
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="An Agniveer is a young individual recruited into the Indian Armed Forces (Army, Navy, and Air Force) under the Agnipath scheme, a transformative defense recruitment policy. The scheme aims to create a more youthful, tech-savvy, and agile fighting force while reducing the defense pension bill"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp"/>

            <!-- Eligibility Header -->
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recruitment"
                android:textSize="16sp"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Residential Requirement -->
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The process is conducted via an all-India, merit-based online system for individuals aged 17.5 to 21 years (the upper age limit was relaxed to 23 as a one-time measure for the 2022 recruitment cycle)."
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- Schooling Requirement -->
            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Tenure: Agniveers are recruited for a short service duration of four years, which includes a six-month training period."
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- Age Limit -->
            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="After four years, up to 25% of Agniveers from each batch may be offered the opportunity to join the permanent cadre based on merit and organizational requirements. The remaining 75% will return to civil society with skill certificates and priority for various government jobs, including in Central Armed Police Forces (CAPFs) and Assam Rifles."
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp"/>

            <!-- Map Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/smallMapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:clickable="true"
                    tools:ignore="MissingClass" />

                <ImageView
                    android:id="@+id/btnOpenFullMap"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/round_white_bg"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:contentDescription="Open Full Map" />

            </androidx.cardview.widget.CardView>

            <!-- WhatsApp Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/WhatsappBtnSSC_GD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#25D366"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="WhatsApp icon"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whatsapp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>