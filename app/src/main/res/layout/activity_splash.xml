<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC423">

    <!-- Concentric Circle Pattern (Top Right) -->

    <!-- Logo Container -->

    <ImageView
        android:id="@+id/circlePattern"
        android:layout_width="320dp"
        android:layout_height="324dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Circle Pattern"
        android:src="@drawable/concentric_circles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42">

        <!-- Lightning Bolt Shield Logo -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/shieldBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shield_background"
                android:contentDescription="Shield Background" />

            <ImageView
                android:id="@+id/lightningBolt"
                android:layout_width="32dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/lightning_bolt"
                android:contentDescription="Lightning Bolt" />
        </FrameLayout>

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- "THE" Text -->
            <TextView
                android:id="@+id/theText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="‹THE›"
                android:textSize="11sp"
                android:textColor="#5D3A1A"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:layout_marginBottom="0dp" />

            <!-- "SPARK" Text -->
            <TextView
                android:id="@+id/sparkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPARK"
                android:textSize="32sp"
                android:textColor="#3D2310"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.08"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="-4dp" />

            <!-- "INSTITUTE" Text -->
            <TextView
                android:id="@+id/instituteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INSTITUTE"
                android:textSize="15sp"
                android:textColor="#3D2310"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Curved Wave -->
    <ImageView
        android:id="@+id/bottomWave"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="Bottom Wave"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_curved_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>