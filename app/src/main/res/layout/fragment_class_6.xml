<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF8F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFF8F0"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navodaya Class 6"
                android:textSize="28sp"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"/>

            <!-- Target Illustration -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Target illustration"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>

        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <!-- About JNV -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawahar Navodaya Vidyalaya (JNV) Nagrakata is a government-operated, co-educational. The school was established to provide modern, high-quality, and free education to talented children, primarily from rural areas, regardless of their family's socioeconomic background."
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp"/>

            <!-- Eligibility Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eligibility criteria for JNVST Class 6 (2026-27)"
                android:textSize="16sp"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Residential Requirement -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Residential requirement: The candidate must be a resident of the same district asthe Jawahar Navodaya Vidyalaya to which they are applying."
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- Schooling Requirement -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schooling: The candidate must be studying in Class 5 during the 2025-26 academic session at a recognized government or government-aided school in the same district."
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- Age Limit -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age limit: The applicant's date of birth must fall between May 1, 2014, and July 31, 2016 (inclusive of both dates). This age range applies to all categories of candidates, including SC/ST."
                android:textSize="14sp"
                android:textColor="#34495E"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp"/>

            <!-- Map Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="School location map"/>

            </androidx.cardview.widget.CardView>

            <!-- WhatsApp Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/whatsappButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#25D366"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="WhatsApp icon"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whatsapp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>