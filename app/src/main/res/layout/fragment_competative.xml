<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D264FA">

    <!-- Header Section with Purple Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:background="@drawable/liner_compatitive"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Title -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Back button"
                android:src="@drawable/back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competitive"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_gravity="start"
                android:layout_marginTop="30sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/competitive">

            </ImageView>
        </LinearLayout>

        <!-- Back Arrow -->



    </LinearLayout>


    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/top_corner_radus"
            android:padding="16dp">

            <!-- Chapters Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Chapters Section -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="course"
                    android:src="@drawable/course" />
                <!-- Courses Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    />

            </LinearLayout>


            <!-- Course Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Agniveer Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E8D5FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/outline_compatitive"

                        android:paddingStart="24dp"
                        android:paddingEnd="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agniveer"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- SSC GD Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E8D5FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="24dp"
                        android:background="@drawable/outline_compatitive"
                        android:paddingEnd="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SSC GD"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- WB Police Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E8D5FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="24dp"
                        android:background="@drawable/outline_compatitive"
                        android:paddingEnd="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WB Police"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Railway Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E8D5FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/outline_compatitive"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Railway"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Indian Army Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E8D5FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/outline_compatitive"

                        android:paddingStart="24dp"
                        android:paddingEnd="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Indian Army"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
